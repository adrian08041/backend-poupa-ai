generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          String              @id @default(uuid())
  nome        String
  email       String              @unique
  senha       String
  role        Role                @default(USER)
  assinaturas AssinaturaUsuario[] // Relação corrigida
  created_at  DateTime            @default(now()) @map("created_at")
  updated_at  DateTime            @updatedAt @map("updated_at")

  @@map("usuario")
}

model Plano {
  id                   String              @id @default(uuid())
  nome                 String
  preco                Decimal             @db.Decimal(10, 2)
  ativo                Boolean             @default(true)
  limite_transacoes    Int
  relatorios_limitados Boolean             @default(false)
  assinaturas          AssinaturaUsuario[]
  created_at           DateTime            @default(now()) @map("created_at")
  updated_at           DateTime            @updatedAt @map("updated_at")

  @@map("planos")
}

model AssinaturaUsuario {
  id         String           @id @default(uuid())
  usuario_id String
  plano_id   String
  status     StatusAssinatura @default(INATIVA)
  expira_em  DateTime?
  usuario    Usuario          @relation(fields: [usuario_id], references: [id])
  plano      Plano            @relation(fields: [plano_id], references: [id])
  created_at DateTime         @default(now()) @map("created_at")
  updated_at DateTime         @updatedAt @map("updated_at")

  @@map("assinaturas_usuarios")
}

enum Role {
  USER
  ADMIN
}

enum StatusAssinatura {
  ATIVA
  INATIVA
}
